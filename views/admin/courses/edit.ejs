<% include ../partials/admin-header %>

<div class="container">
    <h1>Edit Course: <%= course.code %></h1>
    
    <form method="POST" action="/admin/courses/<%= course.id %>/seats">
        <div class="form-group">
            <label>Total Seats:</label>
            <input type="number" name="seats" value="<%= course.seats %>" 
                   min="<%= course.registeredStudents.length %>" required>
        </div>
        <button type="submit" class="btn">Update Seats</button>
    </form>
</div>

<% include ../partials/admin-footer %>